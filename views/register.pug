extends layout

block content
  .container
    h1 Register Page
    p.lead We loaded Register page.
    br
    form(role='form', action="/climber/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        input.form-control(type='email', name="email", placeholder='Email')
      .form-group
        input.form-control(type='date', name="date_of_birth", placeholder='Birth Date')
      .form-group
        input.form-control(type='text', name="gender", placeholder='gender')
      .form-group
        input.form-control(type='number', name="height_feet", placeholder='height-feet')
      .form-group
        input.form-control(type='number', name="height_inch", placeholder='height-inches')
      .form-group
        label Gym Memberships:
        div
          for gym in gyms
            div(style='display: block; padding-right:10px;')
              input.form-contorl(type='checkbox', name="gym_memberships", id=gym._id, value=gym._id, checked=gym.checked)
              label(for=gym._id) #{gym.gymname}
      
      button.btn.btn-default(type='submit') Submit
      
      a(href='/')
        button.btn.btn-primary(type="button") Cancel